@{
    ViewData["Title"] = "Home Page";
}

<div>
    
    <div class="row" style="padding: 16px;">
        <div class="col-md-8 " style="height:100vh; background:#c4cbd2;border: 1px solid #ececec;">
            <div class="row" style="padding:10px">
                <h5 class="card-title" style="margin-bottom: .75rem;color:white; margin-left: 11px;">COVAID-19 Dashboard</h5>
                <div class="flex-container">
                    <div style="flex-grow: 1">
                        <div class="card bg-info" >
                            <div class="card-body" style="color:white">
                                <p class="card-text">Total Cases</p>
                                <h5 id="totalCase">2,33,40,938</h5>
                            </div>
                        </div>
                    </div>
                    <div style="flex-grow: 1">
                        <div class="card bg-warning">
                            <div class="card-body"  style="color:white">
                                <p class="card-text">Total Active Cases</p>
                                <h5 id="active"></h5>
                            </div>
                        </div>
                    </div>
                    <div style="flex-grow: 1">
                        <div class="card bg-success">
                            <div class="card-body"  style="color:white">
                                <p class="card-text">Total Recovered</p>
                                <h5 id="recovered">2,33,40,938</h5>
                            </div>
                        </div>
                    </div>
                    <div style="flex-grow: 1">
                        <div class="card">
                            <div class="card-body bg-danger"  style="color:white">
                                <p class="card-text">Total deaths</p>
                                <h5 id="deaths"></h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="padding:10px">
                <h5 class="card-title" style="margin-bottom: .75rem;color:white; margin-left: 11px;">COVAID-19 Dashboard</h5>
                <div class="flex-container">
                    <div style="flex-grow: 1">
                        <div class="card">
                            <div class="card-body bg-info"  style="color:white">
                                <p class="card-text">Today's Cases</p>
                                <h5 id="tcases">2,33,40,938</h5>
                            </div>
                        </div>
                    </div>
                    <div style="flex-grow: 1">
                        <div class="card bg-danger"  style="color:white">
                            <div class="card-body">
                                <p class="card-text">Today's Deaths</p>
                                <h5 id="tdeaths">2,33,40,938</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="padding:10px">
                <h5 class="card-title" style="margin-bottom: .75rem;color:white; margin-left: 11px;">COVAID-19 Dashboard</h5>
                <div class="flex-container">

                    <div style="flex-grow: 1">
                        <div class="card bg-info"  style="color:white">
                            <div class="card-body">
                                <p class="card-text">Total Covaid Tests</p>
                                <h5 id="tests"></h5>
                            </div>
                        </div>
                    </div>
                    <div style="flex-grow: 1">
                        <div class="card bg-success"  style="color:white">
                            <div class="card-body">
                                <p class="card-text">Total Vaccined</p>
                                <h5 id="vaccine">2,33,40,938</h5>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div id="carouselExampleIndicators" class="carousel slide col-md-4" data-ride="carousel" style="height:100vh;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885__480.jpg" class="d-block w-100" style="height:100vh;" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://media.istockphoto.com/photos/child-hands-formig-heart-shape-picture-id951945718?k=6&m=951945718&s=612x612&w=0&h=ih-N7RytxrTfhDyvyTQCA5q5xKoJToKSYgdsJ_mHrv0=" class="d-block w-100" style="height:100vh;" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://media.istockphoto.com/photos/child-hands-formig-heart-shape-picture-id951945718?k=6&m=951945718&s=612x612&w=0&h=ih-N7RytxrTfhDyvyTQCA5q5xKoJToKSYgdsJ_mHrv0=" class="d-block w-100" style="height:100vh;" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row" style="padding: 16px 16px 16px 0px;">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Time series
                </div>
                <div class="card-body">
                    <div class="form-group" style="width: 248px; margin-left: 50px;">
                        <label for="exampleFormControlSelect1">Select to get Custom time series : </label>
                        <select class="form-control" id="timeSeriesChg" onchange="timeSeries()">
                            <option value="7">One Week</option>
                            <option value="30">One Month</option>
                            <option value="90">One Quarter</option>
                            <option value="180">Half Year</option>
                            <option value="365">One Year</option>
                            <option value="all">All Time</option>
                        </select>
                    </div>
                    <div id="casesPlot" style="height:350px;width:100%"></div>
                </div>
            </div>

        </div>
    </div>



</div>
